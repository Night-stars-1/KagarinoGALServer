<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kagarino.mapper.CommentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kagarino.entity.KagarinoComment">
        <id column="comment_id" property="commentId"/>
        <result column="comment_article_id" property="commentArticleId"/>
        <result column="comment_content" property="commentContent"/>
        <result column="comment_gmt_release" property="commentGmtRelease"/>
        <result column="comment_dialog_id" property="commentDialogId"/>
        <result column="comment_name" property="commentName"/>
        <result column="comment_dialog_name" property="commentDialogName"/>
        <result column="comment_state" property="commentState"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        comment_id, comment_article_id, comment_content, comment_gmt_release, comment_dialog_id, comment_name, comment_dialog_name, comment_state, gmt_create, gmt_modified
    </sql>

</mapper>
